module ql/QL-Top

imports

  ql/Expressions
  ql/Types
	lexical/Common

templates // top-level

	Form.Form = <
		form <ID> {
			<Group*; separator="\n\n">
		}
	>
	
templates // questions
	
	Group = <<Question>>

	Question.Question = <
		<ID> : <Label> <Type>
	>
	
	Question.Computed = <
		<ID> : <Label> <TyExpr>
	>
	
	Label.Label = <<STRING>>
	
templates // conditional

	Group.Conditional = <
		if (<Expr>) {
			<Group*; separator="\n\n">
		}
	>
