module ql/sorting

imports
  include/QL
  lib/runtime/relations/-
  lib/runtime/index/-
  lib/runtime/task/-
  
rules
  
  question-name: |[ if (c) { qid: label type  } ]| -> qid
  question-name: |[ if (c) { qid: label texpr } ]| -> qid
  
  depends-on(|q1) =
	  qid2 := <question-name> 
  ; qid1 := <question-name> q1
	; dep* := <get-index-relations(|"<depends-on:")> qid1
	; <elem> (qid2, dep*)
	  
  sort-by-dependencies = Form(id, quick-sort(depends-on))